{
  "manifest_version": 3,
  "name": "Resume Keyword Scanner",
  "version": "0.2.0",
  "description": "Scan a job posting and compare it to your resume keywords.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Resume Keyword Scanner"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["lib/pdf.worker.mjs"],
      "matches": ["<all_urls>"]
    }
  ]
}
